#include<stdio.h>
#include<string.h>
int main()
{
	int i=0,n,count=0;
  	char input[800];
  	printf("Enter the length of input string\t");
  	scanf("%d",&n);
  	printf("Enter the input\t");
	scanf("%s",input);
 	printf("Input :%s\t",input);
 	printf("\n");	
  	printf("Input  After Bit stuffing : ");
	 for(i=0; i<strlen(input); i++)
		 {
    			if(input[i]=='1')
        			count++;
    			else
        			count=0;
    				printf("%c",input[i]);
   			 if(count==5)
   				 {
				       printf("0");
 				       count=0;
    				}
		 }
		
 	return 0;
}
